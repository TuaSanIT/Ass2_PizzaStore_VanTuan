        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.Address)
        </dd>
    </dl>
    
    <form method="post" id="isDelete">
        <input type="hidden" asp-for="Order.OrderDetails" />
        <button type="button" class="btn btn-danger" onClick="Confirm()">Delete</button> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

<script>
    const Confirm = () => {
        if (confirm("Are you sure you want to delete this?")) {
            document.getElementById('isDelete').submit();
        }
    }
</script>
